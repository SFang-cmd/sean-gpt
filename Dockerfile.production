# Production Docker build for Sean GPT - Auto-sync mode
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements files
COPY backend/requirements.txt backend/requirements.txt
COPY frontend/requirements.txt frontend/requirements.txt

# Install Python dependencies
RUN pip install --no-cache-dir -r backend/requirements.txt
RUN pip install --no-cache-dir -r frontend/requirements.txt
RUN pip install --no-cache-dir requests  # For GitHub API calls

# Copy application code
COPY backend/ backend/
COPY frontend/streamlit_app_production.py frontend/streamlit_app.py

# Create data directories
RUN mkdir -p backend/data/chroma_db
RUN mkdir -p backend/data/obiKnowledge

# Health check
COPY backend/health_check.py backend/
RUN chmod +x backend/health_check.py

# Expose port
EXPOSE 8501

# Health check command
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
  CMD python backend/health_check.py || exit 1

# Production command - uses the production streamlit app
CMD ["streamlit", "run", "frontend/streamlit_app.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.headless=true"]